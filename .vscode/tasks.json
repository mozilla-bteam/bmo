{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start local server",
      "type": "shell",
      "command": "vagrant up",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Suspend local server",
      "type": "shell",
      "command": "vagrant suspend",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Update local server",
      "type": "shell",
      "command": "vagrant rsync && vagrant provision --provision-with update",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Update local server (force)",
      "type": "shell",
      "command": "vagrant rsync && vagrant provision",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Update Perl dependencies",
      "type": "shell",
      "command": "vagrant ssh web -c bmo-refresh-bundle",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
