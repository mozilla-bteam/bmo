{
    "files.insertFinalNewline": true,
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.tmpl": "tt",
        "*.css": "css",
        "*.cgi": "perl"
    },
    "gitlens.blame.ignoreWhitespace": true,
    "files.exclude": {
        ".vagrant": true,
        ".vscode/perl-lang": true,
        "template_cache": true
    },
    "files.watcherExclude": {
        "**/local/**": true
    },
    "search.exclude": {
        "**/local": true
    }
}
