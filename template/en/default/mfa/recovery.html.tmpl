[% css = BLOCK %]

#codes {
  font-size-adjust: .5;
  font-family: var(--font-family-monospace);
}

[% END %]

[%
  PROCESS global/header.html.tmpl
    style_urls = ['skins/standard/admin.css']
    no_body    = 1
    style      = css
%]
<body id="mfa-recovery-embedded">
  [% IF codes.size %]
    <div id="codes">
      [% FOREACH code IN codes %]
        [% code FILTER html %]<br>
      [% END %]
    </div>
  [% ELSE %]
    <i>Codes already generated</i>
  [% END %]
</body>
</html>
