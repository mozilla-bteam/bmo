        content="[% meta_refresh FILTER html %]">
    [% END %]
    [% USE Bugzilla %]

    [%- js_BUGZILLA = {
            config => {
                basepath => basepath,
                urlbase => urlbase,
                cookie_consent_enabled => Param("cookie_consent_enabled"),
                cookie_consent_required => Bugzilla.cgi.cookie_consent_required,
                essential_cookies => constants.ESSENTIAL_COOKIES,
            }
