[%# INTERFACE:
  # mailing_bugid: The bug ID that email is being sent for.
  # recipient_count: The number of people that were emailed.
  #%]

[% USE Bugzilla %]
[% PROCESS global/variables.none.tmpl %]

[% IF recipient_count > 1 %]
  Email sent to [% recipient_count FILTER none %] recipients.
[% ELSIF recipient_count == 1 %]
  Email sent to 1 recipient.
[% ELSE %]
  No emails sent.
[% END %]
