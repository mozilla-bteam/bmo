  content: " *";
  color: red;
}
#fsa_form .field_label {
  text-align: left;
  font-weight: bold;
}
#fsa_form .field_desc,
#fsa_form .head_desc {
  word-wrap: normal;
}
#fsa_form .head_desc {
  font-size: 1.5em;
  padding-bottom: .5em;
}
#fsa_form .form_section {
  margin-bottom: 1em;
}
